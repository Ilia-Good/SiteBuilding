@model IReadOnlyList<SiteBuilder.ViewModels.PublicSiteCard>
@{
    ViewData["Title"] = "Все сайты";
}

@section Ads {
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8773683201595025"
            crossorigin="anonymous"></script>
}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
    <div>
        <h1 class="h4 mb-1" data-i18n="all_sites_title">Все сайты</h1>
        <p class="text-muted mb-0" data-i18n="all_sites_subtitle">Все опубликованные сайты сообщества.</p>
    </div>
    <a class="btn btn-outline-light" data-i18n="all_sites_create" href="/builder">Создать свой</a>
</div>

@if (Model.Count == 0)
{
    <div class="card shadow-sm">
        <div class="card-body" data-i18n="all_sites_empty">
            Пока нет опубликованных сайтов.
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var site in Model)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@site.SiteName</h5>
                        <div class="text-muted small mb-3"><span data-i18n="all_sites_published">Опубликован</span>: @site.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</div>
                        <a class="btn btn-sm btn-primary mt-auto" href="@site.Url" target="_blank" rel="noopener noreferrer" data-i18n="all_sites_open">Открыть сайт</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
