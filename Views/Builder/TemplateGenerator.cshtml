@{
    ViewData["Title"] = "Template Generator";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="h3 mb-3">Template Generator</h1>
            <p class="text-muted">Generate a simple HTML page, preview it, and download it.</p>

            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="mb-3">
                        <label for="siteName" class="form-label">Site name</label>
                        <input id="siteName" class="form-control" value="My site" />
                    </div>

                    <div class="mb-3">
                        <label for="siteDescription" class="form-label">Site description</label>
                        <textarea id="siteDescription" class="form-control" rows="3">Welcome to my site</textarea>
                    </div>

                    <div class="d-flex gap-2 flex-wrap">
                        <button type="button" class="btn btn-primary" id="previewBtn" onclick="handlePreview()">Preview</button>
                        <button type="button" class="btn btn-success" id="downloadBtn" onclick="handleDownload()">Download HTML</button>
                        <button type="button" class="btn btn-outline-secondary" id="openBtn" onclick="handleOpenNew()">Open in new tab</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/template-generator.js"></script>
<script>
    async function handlePreview() {
        const siteName = document.getElementById('siteName').value;
        const siteDescription = document.getElementById('siteDescription').value;

        const btn = document.getElementById('previewBtn');
        btn.disabled = true;
        btn.textContent = 'Generating...';

        try {
            await templateGen.generateAndPreview(siteName, siteDescription);
        } finally {
            btn.disabled = false;
            btn.textContent = 'Preview';
        }
    }

    async function handleDownload() {
        const siteName = document.getElementById('siteName').value;
        const siteDescription = document.getElementById('siteDescription').value;

        const btn = document.getElementById('downloadBtn');
        btn.disabled = true;
        btn.textContent = 'Downloading...';

        try {
            await templateGen.downloadTemplate(siteName, siteDescription);
        } finally {
            btn.disabled = false;
            btn.textContent = 'Download HTML';
        }
    }

    async function handleOpenNew() {
        const siteName = document.getElementById('siteName').value;
        const siteDescription = document.getElementById('siteDescription').value;

        const btn = document.getElementById('openBtn');
        btn.disabled = true;
        btn.textContent = 'Opening...';

        try {
            const html = await templateGen.generateTemplate(siteName, siteDescription);
            templateGen.openInNewTab(html);
        } finally {
            btn.disabled = false;
            btn.textContent = 'Open in new tab';
        }
    }
</script>
