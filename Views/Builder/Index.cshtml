            }

            async function publishSite() {
                const titleText = siteTitleInput.value.trim();
                const slug = makeSlug(titleText);
                if (!slug) {
                    setPublishStatus('Введите название сайта латиницей (например, coffee).', 'is-error');
                    return;
                }

                if (generateOverlay) {
                    if (generateOverlayText) generateOverlayText.textContent = 'Публикация...';
                    generateOverlay.classList.remove('d-none');
                }
                setPublishStatus('Публикация... пожалуйста, подождите.', 'is-muted');

                try {
                    const state = collectBuilderState();
                    const publishResp = await fetch('/api/publish', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ slug, state })
                    });
                    if (!publishResp.ok) {
                        const errText = await publishResp.text();
                        throw new Error(errText || 'Ошибка публикации');
                    }
                    const data = await publishResp.json();
                    const url = data.url || '';
                    setPublishStatus('Готово! Ссылка на сайт:', 'is-success', url);
                    showPublishModal(url);
                } catch (err) {
                    setPublishStatus(`Ошибка публикации: ${err.message || err}`, 'is-error');
                } finally {
                    if (generateOverlay) {
                        if (generateOverlayText) generateOverlayText.textContent = 'Подождите...';
                        setTimeout(() => generateOverlay.classList.add('d-none'), 700);
                    }
                }
            }

            function setPublishStatus(message, className, url) {
                if (!publishStatus) return;
                publishStatus.innerHTML = '';
                publishStatus.className = `publish-status ${className || ''}`.trim();

                const title = document.createElement('div');
                title.className = 'publish-status-title';
                title.textContent = message || '';
                publishStatus.appendChild(title);

                if (publishStatusLeft) {
                    publishStatusLeft.innerHTML = publishStatus.innerHTML;
                    publishStatusLeft.className = publishStatus.className;
                }

                if (url) {
                    const link = document.createElement('a');
                    link.href = url;
                    link.target = '_blank';
                    link.rel = 'noopener noreferrer';
                    link.className = 'publish-status-link';
                    link.textContent = url;
                    publishStatus.appendChild(link);

                    const note = document.createElement('div');
                    note.className = 'publish-status-note';
                    note.textContent = 'Подождите пару минут, пока сайт загрузится.';
                    publishStatus.appendChild(note);
                }
            }

            function showPublishModal(url) {
                if (!publishModal || !publishModalLink) return;
                publishModalLink.href = url;
                publishModalLink.textContent = url;
                publishModal.classList.remove('d-none');
            }

            function scheduleSave() {
                if (saveTimer) clearTimeout(saveTimer);
                saveTimer = setTimeout(saveState, 300);
            }

            function collectBuilderState() {
                return {
                    siteTitle: siteTitleInput.value,
                    siteTitleColor: siteTitleColorInput.value,
                    headerText: headerInput.value,
                    headerAlign: headerAlignInput.value,
                    headerColor: headerColorInput.value,
                    footerText: footerInput.value,
                    footerAlign: footerAlignInput.value,
                    footerColor: footerColorInput.value,
                    avatarUrl: avatarInput.value,
                    backgroundColor: backgroundColorInput.value,
                    globalEffect: effectSelect.value,
                    blocks: blocks.map((block) => ({
                        id: block.id,
                        type: block.type === 'formspree' ? 'contactForm' : block.type,
                        content: block.content,
                        align: block.align,
                        color: block.color,
                        effect: block.effect,
                        url: block.url,
                        paddingY: block.paddingY,
                        paddingX: block.paddingX,
                        buttonColor: block.buttonColor,
                        submitLabel: block.submitLabel
                    }))
                };
            }

            function saveState() {
                const state = collectBuilderState();
                localStorage.setItem('builder_state', JSON.stringify(state));
            }

            function loadState() {
                const raw = localStorage.getItem('builder_state');
                if (!raw) return;
                try {
                    const state = JSON.parse(raw);
                    siteTitleInput.value = state.siteTitle || '';
                    siteTitleColorInput.value = state.siteTitleColor || '#f8fafc';
                    headerInput.value = state.headerText || '';
                    headerAlignInput.value = state.headerAlign || 'left';
                    headerColorInput.value = state.headerColor || '#e5e7eb';
                    footerInput.value = state.footerText || '';
                    footerAlignInput.value = state.footerAlign || 'left';
                    footerColorInput.value = state.footerColor || '#e5e7eb';
                    avatarInput.value = state.avatarUrl || '';
                    backgroundColorInput.value = state.backgroundColor || '#0b1220';
                    effectSelect.value = state.globalEffect || 'none';
                    blocks = Array.isArray(state.blocks) ? state.blocks.map((block) => ({
                        ...block,
                        type: block.type === 'formspree' ? 'contactForm' : block.type
                    })) : [];
                    blockIdCounter = blocks.reduce((maxId, b) => Math.max(maxId, b.id || 0), 0) + 1;
                    hadSavedState = true;
                } catch {
                    return;
                }
            }

            function applyTemplate(key) {
                const template = templates[key] || templates.blank;
                siteTitleInput.value = template.title;
                headerInput.value = template.header;
                footerInput.value = template.footer;
                blocks = template.blocks.map((b) => ({
                    id: blockIdCounter++,
                    type: b.type,
                    content: b.content,
                    align: b.align || 'left',
                    color: b.color || '#e5e7eb',
                    effect: b.effect || 'none',
                    url: b.url,
                    paddingY: b.paddingY,
                    paddingX: b.paddingX,
                    buttonColor: b.buttonColor
                }));
                renderEditors();
                renderPreview();
                scheduleSave();
            }

            function showTemplateModal() {
                if (!templateModal) return;
                templateModal.classList.remove('d-none');
            }

            function hideTemplateModal() {
                if (!templateModal) return;
                templateModal.classList.add('d-none');
            }

            function showContextMenu(x, y) {
                if (!contextMenu) return;
                contextMenu.style.left = `${x}px`;
                contextMenu.style.top = `${y}px`;
                contextMenu.classList.remove('d-none');
                suppressContextClose = true;
            }

            function closeContextMenu() {
                if (!contextMenu) return;
                contextMenu.classList.add('d-none');
                contextTargetId = null;
            }

            preview.addEventListener('click', () => selectBlock(null));

            preview.addEventListener('contextmenu', (event) => {
                const target = event.target.closest('.builder-preview-block');
                if (target && target.dataset.blockId) {
                    contextTargetId = Number(target.dataset.blockId);
                } else {
                    contextTargetId = null;
                }
            });

            loadState();
            renderEditors();
            renderPreview();

            if (!hadSavedState) {
                showTemplateModal();
            }
        })();
    </script>
