@model IReadOnlyList<SiteBuilder.Models.Site>

<div class="dropdown">
    <button class="btn btn-sm btn-outline-light dropdown-toggle app-nav-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Мои сайты
    </button>
    <ul class="dropdown-menu dropdown-menu-end app-dropdown">
        @if (Model.Count == 0)
        {
            <li><span class="dropdown-item-text text-muted">Пока нет сайтов</span></li>
        }
        else
        {
            foreach (var site in Model)
            {
                <li>
                    <a class="dropdown-item" href="/builder" title="@site.SiteName">@site.SiteName</a>
                </li>
            }
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item" href="/sites">Управление сайтами</a></li>
        }
    </ul>
</div>
