@model SiteBuilder.ViewModels.SitesIndexViewModel
@{
    ViewData["Title"] = "Мои сайты";
}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
    <div>
        <h1 class="h4 mb-1">Мои сайты</h1>
        <p class="text-muted mb-0">Лимит: @Model.MaxSites сайта(ов). Удалите сайт, чтобы создать новый.</p>
    </div>
    @if (Model.CanCreate)
    {
        <a class="btn btn-outline-light" href="/builder">Создать сайт</a>
    }
    else
    {
        <button class="btn btn-outline-light" type="button" disabled>Создать сайт</button>
    }
</div>

@if (!Model.CanCreate)
{
    <div class="alert alert-warning">
        @Model.LimitMessage
    </div>
}

@if (TempData["SitesError"] is string siteError && !string.IsNullOrWhiteSpace(siteError))
{
    <div class="alert alert-danger">
        @siteError
    </div>
}

@if (Model.Sites.Count == 0)
{
    <div class="card shadow-sm">
        <div class="card-body">
            Пока нет сайтов. Создайте первый в конструкторе.
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var site in Model.Sites)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@site.SiteName</h5>
                        <div class="text-muted small mb-2">Создан: @site.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</div>
                        <div class="text-muted small mb-2">Триал до: @site.ExpiresAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</div>
                        <div class="text-muted small mb-3">Оплачен: @(site.IsPaid ? "Да" : "Нет")</div>
                        @if (!string.IsNullOrWhiteSpace(site.GithubPath))
                        {
                            <div class="text-muted small mb-3">GitHub: @site.GithubPath</div>
                        }
                        <div class="mt-auto d-flex gap-2">
                            <a class="btn btn-sm btn-outline-light" href="/builder?site=@site.SiteName">Изменить</a>
                            <a class="btn btn-sm btn-outline-secondary" href="/builder?copyFrom=@site.SiteName">Копия</a>
                            <a class="btn btn-sm btn-outline-info" asp-controller="Sites" asp-action="Messages" asp-route-siteId="@site.Id">Сообщения</a>
                            <form method="post" asp-controller="Sites" asp-action="Delete" asp-route-id="@site.Id">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">Удалить</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
