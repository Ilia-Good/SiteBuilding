@model SiteBuilder.ViewModels.SitesIndexViewModel
@{
    ViewData["Title"] = "Мои сайты";
}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
    <div>
        <h1 class="h4 mb-1" data-i18n="my_sites_title">Мои сайты</h1>
        <p class="text-muted mb-0">
            <span data-i18n="my_sites_limit">Лимит:</span> @Model.MaxSites.
            <span data-i18n="my_sites_used">Использовано</span>: @Model.UsedSitesCount.
            <span data-i18n="my_sites_left">Осталось</span>: @Model.RemainingSitesCount.
        </p>
    </div>
    @if (Model.CanCreate)
    {
        <a class="btn btn-outline-light" data-i18n="my_sites_create" href="/builder">Создать сайт</a>
    }
    else
    {
        <button class="btn btn-outline-light" data-i18n="my_sites_create" type="button" disabled>Создать сайт</button>
    }
</div>

@if (!Model.CanCreate)
{
    <div class="alert alert-warning">
        @Model.LimitMessage
    </div>
}

@if (TempData["SitesError"] is string siteError && !string.IsNullOrWhiteSpace(siteError))
{
    <div class="alert alert-danger">
        @siteError
    </div>
}

@if (Model.Sites.Count == 0)
{
    <div class="card shadow-sm">
        <div class="card-body">
            <span data-i18n="my_sites_empty">Пока нет сайтов. Создайте первый в конструкторе.</span>
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var site in Model.Sites)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@site.SiteName</h5>
                        <div class="text-muted small mb-2"><span data-i18n="my_sites_created">Создан</span>: @site.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</div>
                        <div class="text-muted small mb-2"><span data-i18n="my_sites_trial">Триал до</span>: @site.ExpiresAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</div>
                        <div class="text-muted small mb-2">
                            <span data-i18n="my_sites_paid">Оплачен</span>:
                            @if (site.IsPaid)
                            {
                                <span data-i18n="common_yes">Да</span>
                            }
                            else
                            {
                                <span data-i18n="common_no">Нет</span>
                            }
                        </div>
                        @{
                            var usedToday = Model.UsedEditsTodayBySiteId.TryGetValue(site.Id, out var used) ? used : 0;
                            var leftToday = Model.RemainingEditsTodayBySiteId.TryGetValue(site.Id, out var left) ? left : Model.MaxEditsPerDayPerSite;
                        }
                        <div class="text-muted small mb-3">
                            <span data-i18n="my_sites_edits_today">Правок сегодня</span>: @usedToday / @Model.MaxEditsPerDayPerSite.
                            <span data-i18n="my_sites_edits_left">Осталось</span>: @leftToday.
                        </div>
                        @if (!string.IsNullOrWhiteSpace(site.GithubPath))
                        {
                            <div class="text-muted small mb-3"><span data-i18n="my_sites_github">GitHub</span>: @site.GithubPath</div>
                        }
                        <div class="mt-auto d-flex gap-2">
                            <a class="btn btn-sm btn-outline-light" data-i18n="my_sites_edit" href="/builder?site=@site.SiteName">Изменить</a>
                            <a class="btn btn-sm btn-outline-secondary" data-i18n="my_sites_copy" href="/builder?copyFrom=@site.SiteName">Копия</a>
                            <a class="btn btn-sm btn-outline-info" data-i18n="my_sites_messages" asp-controller="Sites" asp-action="Messages" asp-route-siteId="@site.Id">Сообщения</a>
                            <form method="post" asp-controller="Sites" asp-action="Delete" asp-route-id="@site.Id">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger" data-i18n="my_sites_delete">Удалить</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
